{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OutPrio",
  "version": "1.0.0",
  "identifier": "com.outprio.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run dev:web",
    "beforeBuildCommand": "npm run build:web"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OutPrio",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https://*.supabase.co https://*.supabase.io; connect-src 'self' http://localhost:8000 http://127.0.0.1:8000 https://*.supabase.co https://*.supabase.io; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
    "icons/icon.ico",
    "icons/icon.icns",
    "icons/16x16.png",
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png"
    ],      
    "resources": [
      "bin/outprioAPI.exe"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFMUJBQkI1NzQ1MzY5NTkKUldSWmFWTjB0YXNiM285S3ZnMHFZZGdvdlJ0KzVUbkFINXpxTDRTUE9zclJ2S21ueVNLWGJMVisK",
      "endpoints": [
        "https://outprio.netlify.app/downloads/latest.json"
      ]
    }
  }
}
